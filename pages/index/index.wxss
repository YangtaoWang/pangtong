
.pub{
  width:718rpx;
  margin: 0 auto;
}
.pub, .serie,.hot{
  margin-bottom:44rpx;
}
.pub-title{
  margin: 20rpx 0;
}
swiper{
  margin-top: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0px 0rpx 10rpx 0rpx #999;
}
swiper-item{
  border-radius: 20rpx;
}
.slide-image{
  width: 718rpx;
  height: 310rpx;
}
.serie-title{
  font-size: 0;
}
.serie-title image{
  width:32rpx;
  height: 32rpx;
  margin-left: 30rpx;
  position: relative;
  top: 2rpx;
}


.serie-title text{
  font-weight: bold;
  font-size: 36rpx;
  margin-left: 14rpx;
}
.serie-title image, .serie-title text{
  vertical-align: middle;
}
.serie-view{
  border-bottom: 2rpx solid #e8e8e8;
}
.serie-inner{
  margin: 38rpx 50rpx 26rpx 30rpx;
  display: flex;
  justify-content: space-between;
}
.serie-left{
  /* border: 1rpx solid white; */
  box-shadow: 0px 0rpx 20rpx 0rpx #ccc;
  border-radius: 20rpx;
  position: relative;
  font-size: 0;
}
.serie-count{
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 34rpx;
  background: linear-gradient(to bottom, rgba(0,0,0,0), rgba(0,0,0,.4));
  border-radius: 0 0 20rpx 20rpx;
  display: flex;
  justify-content: flex-start;
}
.count-icon{
  width: 24rpx;
  height: 24rpx;
  margin:5rpx 0  0 10rpx;
}
.counts{
  font-size: 20rpx;
  color: white;
  margin-left: 10rpx;
  line-height: 34rpx;
}

.serie-teacher{
  width: 188rpx;
  height: 260rpx;
  border-radius: 20rpx;
}
.serie-center{
  width: 300rpx; 
  height: 260rpx; 
  margin-left:-13rpx; 
  display: flex;
  flex-direction: column; 
  justify-content: space-around;
 }
 .serie-topic{
  font-size: 32rpx;
  margin-top: 10rpx; 
   font-weight: 500; 
  /* font-weight: bold; */
}
.serie-name{
  position: relative;
  top: 18rpx;
}   
.speaker-name-icon, .speaker-title-icon{
  width: 28rpx;
  height: 28rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}
.speaker-name, .speaker-title{
  vertical-align: middle;
  font-size: 24rpx;
  color: #888;
}

.time-free{
  font-size: 22rpx;
  background-color: #ea6263;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 15rpx;
  color: white;
  width: 114rpx;
  height: 32rpx;
  /* margin-top: 10rpx; */
  flex: 0 0 auto;
}
.serie-time{
  font-size: 24rpx;
  color: #414141;
}

.free{
  width: 78rpx;
  height: 36rpx;
  font-size: 32rpx;
  background-color: #fbd5d4;
  color: #6a6b6b;
  border-radius: 25rpx;
  text-decoration: line-through;
  text-align: center;
  line-height: 36rpx;
  margin-top: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.free text{
  font-size: 26rpx;
  font-weight: 500;
}

.hot-wrap{
  border-bottom: 2rpx solid #e5e5e5;
}
.hot-class{
  margin: 42rpx 30rpx 38rpx 30rpx;
  display: flex;
  justify-content: space-between;
}
.hot-four{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.pic-wrap{
  background-color:#ccc; 
  /* border: 1rpx solid white; */
  box-shadow: 0px 0rpx 10rpx 0rpx #999;
  border-radius: 20rpx;
  font-size: 0; 

}
.class-image{
  width: 150rpx;
  height: 162rpx;
  border-radius: 20rpx;
}
.hot-four text{
  font-size: 24rpx;
  text-align: center;
  margin-top: 20rpx;
  font-weight: bold;
}
.history-wrap{
  border-bottom: 2rpx solid #e8e8e8;
}
.history-inner{
  margin: 38rpx 50rpx 32rpx 30rpx;
  display: flex;
  justify-content: space-between;
}
.history-right{
  width: 65%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 260rpx;
}
.history-topic{
  margin-top: 10rpx;
  display: flex;
  justify-content: space-between;
}
.topic-title{
  font-size: 32rpx;
  width: 300rpx;
  font-weight: 500;
}
.history-free{
  width: 78rpx;
  height: 36rpx;
  font-size: 32rpx;
  background-color: #fbd5d4;
  color: #6a6b6b;
  border-radius: 25rpx;
  text-decoration: line-through;
  text-align: center;
  line-height: 36rpx;
  margin-top:6rpx;
}
.history-free text{
  font-size: 26rpx;
  font-weight: 500;
}
.history-text{
  font-size: 24rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  color: #7f7f7f;
  width: 380rpx;
  line-height:34rpx;
}
.history-info{
  font-size: 24rpx;
  color: #414141;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.history-play{
  width: 100rpx;
  height: 37rpx;
  margin-left: 30rpx;
}
