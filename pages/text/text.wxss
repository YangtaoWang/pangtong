/* pages/text/text.wxss */
/*详情页面的高度不一样，组件的样式需要在本页面单独设置  */
.com-wrap{
  bottom: 60rpx;
}

.active{
  bottom: -100rpx;
}
.text-inner{
  margin: 50rpx 60rpx 0 50rpx;
}

.text-title{
  font-size: 50rpx;
  line-height: 15rpx;
  font-weight: bold;
}
.gray-line{
  margin: 50rpx 0 10rpx 0;
  height: 1rpx;
  width: 100%;
  background-color: #e8e8e8;
}
.redbtn{
  width: 120rpx;
  height: 40rpx;
  border-radius: 5rpx;
  background-color: #ee4a47;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
}
.text-view{
  margin-top: 40rpx;
}
.text-view text{
  font-size: 30rpx;
  line-height:50rpx;
}
.endview{
  display: flex;
  justify-content: center;
}
.end{
  margin: 150rpx 0 20rpx 0;
  font-size: 20rpx;
  color: #9e9e9e;
}